#
# Copy this file to .env and fill in your values:
#   cp .env.example .env
#
# Then source it before running scripts:
#   source .env

# Required: Your Gmail address
GMAIL_ACCOUNT="your-email@gmail.com"

# Optional: WhatsApp target for scheduled delivery (phone number or contact ID)
# Only needed if using OpenClaw cron with WhatsApp delivery
WHATSAPP_TARGET="+1234567890"

# Optional: Timezone for scheduled jobs (default: America/Los_Angeles)
CRON_TIMEZONE="America/Los_Angeles"

# Optional: Cron schedule expression (default: noon daily)
CRON_SCHEDULE="0 12 * * *"
